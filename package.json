{
  "name": "articles",
  "version": "1.0.0",
  "description": "Articles",
  "main": "src/app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start:dev": "NODE_ENV=development node src/app",
    "migration": "knex migrate:latest",
    "seed": "knex seed:run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mariamzakiyan/articles.git"
  },
  "author": "Mariam Zakiyan",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mariamzakiyan/articles/issues"
  },
  "homepage": "https://github.com/mariamzakiyan/articles#readme",
  "type": "module",
  "dependencies": {
    "@faker-js/faker": "^7.6.0",
    "and": "^0.0.3",
    "bcrypt": "^5.1.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.1",
    "dotenv": "^16.0.3",
    "eslint-plugin-import": "^2.26.0",
    "express": "^4.18.2",
    "http": "^0.0.1-security",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^2.3.0",
    "morgan": "^1.10.0",
    "pg": "^8.8.0"
  },
  "devDependencies": {
    "eslint": "8.22.0",
    "eslint-config-airbnb-base": "^15.0.0"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "rules": {
      "import/prefer-default-export": "off",
      "consistent-return": "off",
      "no-underscore-dangle": "off",
      "max-len": [
        "error",
        {
          "code": 120
        }
      ],
      "import/extensions": [
        0,
        {
          "js": "always"
        }
      ],
      "brace-style": [
        "error",
        "stroustrup"
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "no-unused-vars": [
        "warn"
      ],
      "no-var": [
        "off"
      ],
      "one-var": [
        "off"
      ]
    }
  }
}
